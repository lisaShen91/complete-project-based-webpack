@require('./variables.styl');

.k-table
    font-size $table-font-size
    table-layout fixed
    width 100%
    background $table-bg-color
    border-collapse collapse
    border-spacing 0
    color $table-color

    // thead
    thead
        font-size $table-thead-font-size
        color $table-thead-color
        // border-top $table-th-border-top
        border-bottom $table-th-border-bottom
        // -webkit-backface-visibility hidden
    th
        padding $table-th-padding
        text-align $table-th-text-align 
        font-weight $table-th-font-weight
        position relative
        background $table-thead-bg-color
    .k-th
        display flex

    // sortable
    .k-sortable
        cursor pointer
    .k-sort
        margin-left $table-sort-margin-left
        .k-icon
            font-size $table-sort-icon-font-size 

    // group
    .k-group
        cursor pointer
        max-width 100%
        .k-arrow
            display inline-block
            transition transform $transition
            float right
            margin-left $table-group-margin-left 
    .k-group-show
        .k-group
            .k-arrow
                transform rotate(180deg)

    // resizable
    .k-resize
        height 100%
        width $table-resize-width 
        position absolute
        top 0
        left 0
        cursor ew-resize

    // tbody
    tbody
        tr
            border-bottom $table-tr-border
            &:hover
                background $table-tr-hover-bg-color
    td
        padding $table-td-padding
        word-break break-word

    // checkbox or radio
    .k-th-check
        width $table-check-width
        // FixMe: force checkbox vertical algin
        .k-checkbox
            vertical-align 3px

    // no data
    .k-no-data
        text-align center


.k-table-wrapper
    overflow auto
    border-top $table-th-border-top
    // fix header
    .k-fixed
        position relative
        z-index 1
        border-bottom $table-th-border-bottom
        background $table-thead-bg-color
        thead
            border none
    .k-scroll
        overflow-y auto
        overflow-x hidden
        > .k-table
            margin-top $table-fixed-margin-top 

    // type: border
    &.k-border
        .k-fixed
        thead th
            background $table-border-thead-bg-color
        .k-fixed
        .k-table
            border-left $table-border-left
            border-right $table-border-right
        .k-fixed
            .k-table
                border none

// group
.k-table-dropdown
    .k-item.k-hover
        background $table-group-item-hover-bg-color 
        color $table-group-item-hover-color 
    &:not(.k-multiple)
        .k-item.k-active
            color $table-group-item-active-color 
            


$dir = $theme-dir + '/table.styl';
@import $dir if exists($dir) 
